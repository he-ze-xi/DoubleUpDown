<Window x:Class="BlankApp3.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
         xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="{Binding Title}" Height="350" Width="525" >
    <!--xceed是一个UI库，github也可以搜得到都有文档的，
    用法步骤：1.nuget包搜素：Extended.Wpf.Toolkit并下载。2.直接在界面xaml里添加xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"引用就可以使用了
    DoubleUpDown控件介绍：FormatString="F3"控制小数显示几位，F3是3位，F4是4为，以此类推
    -->
    <StackPanel Orientation="Horizontal" Width="500" Height="50">
        <Label Content="X:" />
        <xctk:DoubleUpDown Value="{Binding CurrentX}" FormatString="F3"  Width="150" />
        <Button Content="测试"/>
    </StackPanel>
</Window>
